{
    "name": "schenke-io/api-client",
    "description": "simple CURL based api client for applications without a SDK",
    "keywords": [
        "schenke-io"
    ],
    "homepage": "https://github.com/schenke-io/api-client",
    "license": "MIT",
    "authors": [
        {
            "name": "K.-U. Schenke"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-curl": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "phpunit/phpunit": "^10.1",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "SchenkeIo\\ApiClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SchenkeIo\\ApiClient\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit",
        "pint": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
